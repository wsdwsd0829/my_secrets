<%= link_to("<<Home", {:action=>'index'}, :class=>'back-link') %>
<h1>User login</h1>
<div class="login">
  <%= form_tag(:action => 'auth') do %>
      <table>
        <tr>
          <td><%= label_tag(:username) %></td>
          <td><%= text_field_tag(:username) %></td>
        </tr>
        <tr>
          <td><%= label_tag(:password) %></td>
          <td><%= password_field_tag(:password) %></td>
        </tr>

        <tr>
          <td>&nbsp;</td>
          <td><%= submit_tag("Log In") %></td>
        </tr>
      </table>
  <% end %>
</div>
